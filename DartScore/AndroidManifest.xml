<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pwners.darts"
    android:versionCode="1"
    android:versionName="1.0" >

    <!--
        Requires a minimum platform version of Android-3 (SDK 1.5) to run
    -->
    <uses-sdk android:minSdkVersion="1"
      android:targetSdkVersion="15"/>
    
    <!--  add contact permission for super awesome contact selection 
    						(patent pending) 
    -->
	<uses-permission android:name="android.permission.READ_CONTACTS"/>
	
	<!--  add sms permissions for sweet sms sending and receiving -->
	<uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameActivity">
      </activity>
            
    </application>

</manifest>